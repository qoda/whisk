.modal.hide{"id" => "whisk-game"}
    .modal-header
        %button.close{"data-dismiss" => "modal"} x
        %h3 Solve The Whisked Words
    .modal-body
        .well.centre
            %h2.question
            %h2.game-over{"style" => "display:none"}
                Time's Up. Game Over
        .alert.answer-feedback{"style" => "display:none"}
            %span
        .game-form
            %form.centre{"method" => "POST", "action" => "/", "class" => "form-search"}
                %input.input.input-xlarge.answer{"type" => "text", "placeholder" => "Answer"}
                %submit.btn.btn-primary.submit-answer Add
        .try-again.centre{"style" => "display:none"}
            %a.btn.btn-large.btn-primary Try Again?
    .modal-footer
        %p
            .row
                .span6
                    %h3.centre
                        %small time remaining
                    %h1.centre.game-timer
                .span6
                    %h3.centre
                        %small overall score
                    %h1.centre.game-score
                        0

